{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "description": "Default configure preset"
        },
        {
            "name": "debug",
            "inherits": "default",
            "description": "Debug build with symbols",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS_DEBUG": "-g3 -O0 -Wall -Wextra -Wpedantic -Wshadow -Wcast-align -Wconversion -Wsign-conversion -Wfloat-equal -Wnull-dereference -fno-omit-frame-pointer -fno-inline -ggdb",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        },
        {
            "name": "release",
            "inherits": "default",
            "description": "Release build with optimizations",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_RELEASE": "-Ofast -DNDEBUG -march=native -flto -fomit-frame-pointer",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "description": "Build in Debug mode"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "description": "Build in Release mode"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "debug"
        }
    ]
}
